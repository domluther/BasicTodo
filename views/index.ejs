                    <input type="checkbox" class="toggle" id=<%=todos[i]._id %> name="<%=todos[i].task %>"
                    <% if (todos[i].complete) {%> checked
                      <% } %> 
                    >
                    
            </span>
            <span class="priority" title="toggle priority"><% if (todos[i].priority) {%> ‚≠êÔ∏è
              <% } else {%> ‚ú©
                  <% } %> </span>
          <span class="delete" title="delete item">üóëÔ∏è</span>
          </li>    
      <% } %>
    </ul>

    <form action="/todo/" method="POST" >
        <input name="task" type="text" placeholder="Add a todo">
        <input type="submit">
    </form>

    <h2><%= count %> items remaining</h2>
    <button class="pickRandom">Random task</button>
      <script src="main.js" defer></script>
  </body>
</html>
